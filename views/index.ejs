<%- include("partials/header") %>

<div class="container">
	<header class="jumbotron"> 
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>	
		</div>
	</header>	

	<!-- To make the size of all the cards same use style="display:flex; flex-wrap: wrap;" -->
	<div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=" <%= campground.image %>">
					<div class="caption">
						<h4> <%= campground.name %> </h4>
					</div>
					<p>
						<!-- To make the campgrounds page to new show template -->
	<!-- ID is automaticall generated by MongoDB therefore <%= campground._id %> redirects to the /:id route -->
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>	
			</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>